<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- My Requests Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Requests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#008C45"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Horizontal scrollable container for table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <LinearLayout
                android:id="@+id/requestsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="4dp" />
        </HorizontalScrollView>

        <!-- Your Queue Number Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Queue Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#008C45"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/queueNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#008C45"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/queueMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#008C45"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- Now Serving Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now Serving"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#008C45"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/nowServingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/lineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Line: --"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="1dp"/>

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: --"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnClaim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim"
                android:backgroundTint="#008C45"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
