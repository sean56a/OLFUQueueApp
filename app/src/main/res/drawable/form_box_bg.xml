<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#22000000"/> <!-- faint gray border -->

    <!-- Inner padding (to stop content from sticking to edges if needed) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
